<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/extra_select_button_sub"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="6dp"
        android:insetRight="6dp"
        android:text="Sub"
        app:layout_constraintBottom_toTopOf="@+id/extra_select_button_swimoff"
        app:layout_constraintEnd_toStartOf="@+id/extra_select_button_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/extra_select_button_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="6dp"
        android:insetRight="6dp"
        android:text="@string/extra_select_button_card"
        app:layout_constraintBottom_toTopOf="@+id/extra_select_button_penalty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/extra_select_button_sub"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/extra_select_button_swimoff"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="6dp"
        android:insetRight="6dp"
        android:text="@string/extra_select_button_swimoff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/extra_select_button_penalty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/extra_select_button_sub" />

    <Button
        android:id="@+id/extra_select_button_penalty"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="6dp"
        android:insetRight="6dp"
        android:text="@string/extra_select_button_penalty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/extra_select_button_swimoff"
        app:layout_constraintTop_toBottomOf="@+id/extra_select_button_card" />
</androidx.constraintlayout.widget.ConstraintLayout>