<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/sub_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="6dp"
        android:insetRight="6dp"
        android:text="Sub"
        app:layout_constraintBottom_toTopOf="@+id/swimoff_button"
        app:layout_constraintEnd_toStartOf="@+id/card_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/card_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="6dp"
        android:insetRight="6dp"
        android:text="Card"
        app:layout_constraintBottom_toTopOf="@+id/penalty_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sub_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/swimoff_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="6dp"
        android:insetRight="6dp"
        android:text="Swim off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/penalty_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sub_button" />

    <Button
        android:id="@+id/penalty_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="6dp"
        android:insetRight="6dp"
        android:text="Penalty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/swimoff_button"
        app:layout_constraintTop_toBottomOf="@+id/card_button" />
</androidx.constraintlayout.widget.ConstraintLayout>