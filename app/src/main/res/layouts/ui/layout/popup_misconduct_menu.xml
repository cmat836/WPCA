<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/misconduct_menu_button_brutality"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/misconduct_menu_button_brutality"
        app:layout_constraintBottom_toTopOf="@+id/misconduct_menu_edit_note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/misconduct_menu_edit_note"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:hint="@string/misconduct_menu_edit_note"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/misconduct_menu_button_misconduct"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/misconduct_menu_button_brutality" />

    <Button
        android:id="@+id/misconduct_menu_button_misconduct"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/misconduct_menu_button_misconduct"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/misconduct_menu_edit_note" />

</androidx.constraintlayout.widget.ConstraintLayout>