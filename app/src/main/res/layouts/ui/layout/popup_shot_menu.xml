<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/shot_menu_button_goal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#E211A614"
        android:insetLeft="6dp"
        android:insetRight="6dp"
        android:text="@string/shot_menu_button_goal"
        app:layout_constraintBottom_toTopOf="@+id/shot_menu_button_block"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/shot_menu_button_block"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#CF4610"
        android:insetLeft="6dp"
        android:insetRight="6dp"
        android:text="@string/shot_menu_button_block"
        app:layout_constraintBottom_toTopOf="@+id/shot_menu_button_miss"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shot_menu_button_goal" />

    <Button
        android:id="@+id/shot_menu_button_miss"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#E10B0B"
        android:insetLeft="6dp"
        android:insetRight="6dp"
        android:text="@string/shot_menu_button_miss"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shot_menu_button_block" />
</androidx.constraintlayout.widget.ConstraintLayout>