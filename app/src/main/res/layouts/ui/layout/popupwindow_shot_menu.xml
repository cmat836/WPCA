<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/goal_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#E211A614"
        android:insetLeft="6dp"
        android:insetRight="6dp"
        android:text="Goal"
        app:layout_constraintBottom_toTopOf="@+id/blocked_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/blocked_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#CF4610"
        android:insetLeft="6dp"
        android:insetRight="6dp"
        android:text="Blocked"
        app:layout_constraintBottom_toTopOf="@+id/miss_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goal_button" />

    <Button
        android:id="@+id/miss_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#E10B0B"
        android:insetLeft="6dp"
        android:insetRight="6dp"
        android:text="Miss"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blocked_button" />
</androidx.constraintlayout.widget.ConstraintLayout>