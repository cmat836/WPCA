<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/shot_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="6dp"
        android:insetRight="6dp"
        android:text="Shot"
        app:layout_constraintBottom_toTopOf="@id/exclusion_button"
        app:layout_constraintEnd_toStartOf="@+id/turnover_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/turnover_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="6dp"
        android:insetRight="6dp"
        android:text="Turn over"
        app:layout_constraintBottom_toTopOf="@id/block_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/shot_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/exclusion_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="6dp"
        android:insetRight="6dp"
        android:text="Exclusion"
        app:layout_constraintBottom_toTopOf="@+id/badpass_button"
        app:layout_constraintEnd_toStartOf="@id/blank_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shot_button" />

    <Button
        android:id="@+id/blank_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="?attr/colorAlert"
        android:insetLeft="6dp"
        android:insetRight="6dp"
        android:text="Whoops"
        app:layout_constraintBottom_toTopOf="@id/badpass_button"
        app:layout_constraintEnd_toStartOf="@id/block_button"
        app:layout_constraintStart_toEndOf="@id/exclusion_button"
        app:layout_constraintTop_toBottomOf="@+id/shot_button" />

    <Button
        android:id="@+id/block_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="6dp"
        android:insetRight="6dp"
        android:text="Block"
        app:layout_constraintBottom_toTopOf="@+id/extra_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/blank_button"
        app:layout_constraintTop_toBottomOf="@id/shot_button" />

    <Button
        android:id="@+id/badpass_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="6dp"
        android:insetRight="6dp"
        android:text="Bad pass"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/extra_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exclusion_button" />

    <Button
        android:id="@+id/extra_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="6dp"
        android:insetRight="6dp"
        android:text="Extra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/badpass_button"
        app:layout_constraintTop_toBottomOf="@id/exclusion_button" />
</androidx.constraintlayout.widget.ConstraintLayout>